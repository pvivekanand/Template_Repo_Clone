<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:bar="sap.ushell.ui.footerbar">
	<ActionSheet id="shareSheet" placement="VerticalPreferedBottom">
		<buttons>
	    	<Button icon="sap-icon://email" id="emailButton" text="{i18n>xbut.email}" press="onEmailPressed" enabled="{viewProperties>/dataLoaded}" />
	    	<bar:AddBookmarkButton id="addBookmarkButton" title="{path:'POId', formatter: '.formatter.titleForTile'}" />
		</buttons>
	</ActionSheet>	
</core:FragmentDefinition>